@model Data.Register
@using Data

@{
    ViewData["Title"] = "Register";
    Register register = (Register)ViewData["data"];
}

<div class="container">

    <form asp-action="Register" class="form-signin">
        <h2 class="form-signin-heading">Register</h2>
        <label asp-for="Username" class="sr-only">Email address</label>
        <input asp-for="Username" class="form-control" placeholder="Username" required="" autofocus="">
        <label asp-for="Email" class="sr-only">Email address</label>
        <input asp-for="Email" class="form-control" placeholder="Email address" required="" kl_ab.original_type="email">
        <label asp-for="Password" class="sr-only">Password</label>
        <input asp-for="Password" class="form-control" placeholder="Password" required="">
        <div class="checkbox">
            <label>
                <input type="checkbox" value="remember-me"> Remember me
            </label>
        </div>
        <button class="btn btn-lg btn-primary btn-block" type="submit">Register</button>
    </form>
    @if (register != null)
    {
        <p>@register.Username</p>
        <p>@register.Email</p>
        <p>@register.Password</p>
    }

</div>
